<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleTextViewSubtitlesActionBar" parent="android:Widget.Material.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_subtitles_actionbar</item>
        <item name="android:background">@color/background_subtitulos</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <!-- Otros atributos personalizados que desees -->
    </style>

    <style name="StyleButtonsAdapters.textViews" parent="android:Widget.Material.TextView">
        <item name="android:textColor">@color/gris_sepa</item>
        <item name="android:textSize">@dimen/size_contents_textviews</item>
    </style>

    <style name="StyleButtonsAdapters.layout" parent="android:Theme">
        <item name="android:background">@color/background_layout_cardviewButtons</item>
    </style>
    <style name="StyleIconsButtons" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/secundary_color</item>
        <item name="android:textColor">@color/gris_sepa</item>
        <item name="cornerRadius">12dp</item>
        <item name="iconGravity">top</item>
        <item name="iconSize">40dp</item>
        <item name="iconTintMode">multiply</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="StyleCardViews">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">2dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="StyleLayoutsOfCardViews" parent="android:Theme">
        <item name="android:background">@color/background_cardviews</item>
    </style>

