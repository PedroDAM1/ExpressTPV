<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleTextViewSubtitlesActionBar" parent="android:Widget.Material.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_subtitles_actionbar</item>
        <item name="android:background">@color/background_subtitulos</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:minHeight">25dp</item>
        <!-- Otros atributos personalizados que desees -->
    </style>

    <style name="StyleLayoutsActivities">
        <item name="android:background">@color/background_activities</item>
    </style>

    <style name="StyleTextViews" parent="android:Widget.Material.TextView">
        <item name="android:textColor">@color/gris_sepa</item>
        <item name="android:textSize">@dimen/size_contents_textviews</item>
    </style>

    <style name="StyleIconsButtons" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/secundary_color</item>
        <item name="android:textColor">@color/gris_sepa</item>
        <item name="cornerRadius">12dp</item>
        <item name="iconGravity">top</item>
        <item name="iconSize">40dp</item>
        <item name="iconTintMode">multiply</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="StyleCardViews">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">2dp</item>
        <item name="android:padding">5dp</item>
        <item name="cardBackgroundColor">@color/background_recyclers</item>
    </style>

    <style name="StyleLayoutsOfcvAdapters" parent="android:Theme">
        <item name="android:background">@color/background_layout_cardviewButtons</item>
    </style>

    <style name="StyleTitulosGrillas" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/foreground_textviews</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleGrillaTextViewRow" parent="Widget.MaterialComponents.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxWidth">25dp</item>
        <item name="android:textColor">@color/foreground_textviews</item>
        <item name="android:background">@drawable/item_grilla_columna_derecha</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="StyleButtons" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="StyleButtonsCancelar" parent="StyleButtons">
        <item name="android:backgroundTint">#F44336</item>
        <item name="android:text">Cancelar</item>
    </style>

</resources>