<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="WidthMetodoPagoCardView">180dp</dimen>

    <style name="StyleCobro.tv" parent="StyleTextViews">
        <item name="android:paddingEnd">5sp</item>
    </style>

    <!-- Estilo para el cardView que esta por encima del recycler de los metodos de pago-->
    <style name="StyleCobro.cvRecyclerMetodoPago" parent="StyleCardViews"/>


    <style name="StyleCobro.cvAdapterMetodoPago" parent="StyleCardViews">
        <item name="cardBackgroundColor">@color/background_layout_cardviewButtons</item>
    </style>

    <!-- Pinta el layout de los items del metodo de pago -->
    <style name="StyleCobro.cvAdapterMetodoPago.lAdapter" parent="StyleLayoutsOfcvAdapters">
        <item name="android:background">@color/background_layout_cardviewButtons</item>
    </style>

    <style name="StyleCobro.cvAdapterMetodoPago.lAdapter.tvMetodoPago" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/foreground_textviews</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleCobro.btnCalculadora" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">@color/foreground_textviews</item>
        <item name="iconPadding">0dp</item>
        <item name="android:textSize">38sp</item>
    </style>

    <style name="StyleCobro.ibtnMonedas" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">1dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="StyleCobro.ibtnBilletes" parent="StyleCobro.ibtnMonedas">
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="StyleCobro.cvTotales.layout" parent="StyleMuestrario.layout"/>

    <style name="StyleCobro.cvTotales.tvValores" parent="StyleMuestrario.tvValores"/>

    <style name="StyleCobro.cvTotales.tvTextos" parent="StyleMuestrario.tvTextos"/>



</resources>