<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutGrillaLineaTicket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="40dp"
   >

    <TextView
        android:id="@+id/tvCantidadGrillaLineaTickets"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        style="@style/StyleVentas.GrillaLineaTicketTextViewRow"
        android:layout_weight="0.4"
        android:text="0"
        />

    <TextView
        android:id="@+id/tvNombreGrillaLineaTickets"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        style="@style/StyleVentas.GrillaLineaTicketTextViewRow"
        android:layout_weight="1"
        android:text="Nombre"
        />

    <TextView
        android:id="@+id/tvCategoriaGrillaLineaTickets"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        style="@style/StyleVentas.GrillaLineaTicketTextViewRow"
        android:layout_weight="1"
        android:text="Categoria"
        />

    <TextView
        android:id="@+id/tvTotalGrillaLineaTickets"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        style="@style/StyleVentas.GrillaLineaTicketTextViewRow"
        android:layout_weight="0.6"
        android:gravity="center|end"
        android:text="@string/precio_selector"
        />
</LinearLayout>