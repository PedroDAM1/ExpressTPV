<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/separator_filas_lineasticket_ventas">

    <TextView
        android:id="@+id/tvCantidadGrillaLineaTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:maxWidth="25dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="@drawable/separator_columnas_lineasticket_ventas"
        android:gravity="start"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvNombreGrillaLineaTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvCategoriaGrillaLineaTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/separator_columnas_lineasticket_ventas"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvTotalGrillaLineaTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:maxLines="1"
        android:background="@drawable/separator_listas_activities"
        android:gravity="end"
        android:text="0.00â‚¬" />
</LinearLayout>